
thinking = random(10);
guess = 0;

print("Guess the number I'm thinking from 0-9");

function guess()

    guess = readnumber();

    if guess > thinking:
       print("Too high!");
    else
        if guess < thinking:
            print("Too low!");
        else
            print("You got it！It was "+thinking+".");
        end;
    end;

end;

while guess != thinking:
   guess();
end;
